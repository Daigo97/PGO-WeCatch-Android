<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wooper (10:50)"
        android:gravity="center"
        android:textSize="@dimen/fontSize_14"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expire_time"
        android:text="08:31:00 PM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/pokemon_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iv"
            android:text="100%"
            android:textStyle="bold"
            android:textSize="@dimen/pokemonWindow_iv"
            android:textColor="@color/iv"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_4" />

        <LinearLayout
            android:id="@+id/iv_details"
            android:orientation="horizontal"
            android:layout_below="@id/iv"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iv_attack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_attack"
                android:padding="@dimen/spacing_2"
                android:textColor="@color/iv_details"
                android:drawablePadding="@dimen/spacing_2"
                android:textSize="@dimen/fontSize_14"
                android:textStyle="bold"
                android:text="15"/>

            <TextView
                android:id="@+id/iv_defense"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_defense"
                android:padding="@dimen/spacing_2"
                android:drawablePadding="@dimen/spacing_2"
                android:textColor="@color/iv_details"
                android:textSize="@dimen/fontSize_14"
                android:textStyle="bold"
                android:text="15"/>

            <TextView
                android:id="@+id/iv_stamina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_stamina"
                android:padding="@dimen/spacing_2"
                android:drawablePadding="@dimen/spacing_2"
                android:textColor="@color/iv_details"
                android:textSize="@dimen/fontSize_14"
                android:textStyle="bold"
                android:text="15"/>

        </LinearLayout>


        <TextView
            android:id="@+id/move1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_details"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:drawablePadding="@dimen/spacing_4"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_skill"
            android:textColor="@color/colorPrimaryDark"
            android:text="MUP ATTACK" />

        <TextView
            android:id="@+id/move2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/move1"
            android:layout_centerHorizontal="true"
            android:drawablePadding="@dimen/spacing_4"
            android:text="MUP ATTACK"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_skill"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>